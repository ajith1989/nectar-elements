{
    "version": "0.1.23",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build && npm run build-tailwind",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/style.css --minify"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ajith1989/nectar-elements.git"
    },
    "dependencies": {
        "@headlessui/react": "^1.5.0",
        "cuid": "^2.1.8",
        "react-feather": "^2.0.9"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "nectar-elements",
    "author": "Ajith Mathew",
    "module": "dist/nectar-elements.esm.js",
    "size-limit": [
        {
            "path": "dist/nectar-elements.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/nectar-elements.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@storybook/addon-essentials": "^6.4.22",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^6.4.22",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addons": "^6.4.22",
        "@storybook/react": "^6.4.22",
        "@tailwindcss/forms": "^0.5.0",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "autoprefixer": "^10.4.2",
        "babel-loader": "^8.2.3",
        "husky": "^7.0.4",
        "postcss": "^8.4.7",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-is": "^17.0.2",
        "size-limit": "^7.0.8",
        "tailwindcss": "^3.0.23",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.5"
    }
}
